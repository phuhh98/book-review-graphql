{
  "name": "book-review-graphql-be",
  "version": "0.0.1",
  "description": "graphql learn test",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "dev": "nodemon -e ts -x \"npm run generate && ts-node src/index.ts\"",
    "start": "npm run build && node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "generate": "graphql-codegen --config codegen.yml",
    "copy": "copyfiles -f \"./src/routes/graphql/*.gql\" dist/routes/graphql/",
    "build": "tsc && npm run copy"
  },
  "keywords": [
    "graphql",
    "learn"
  ],
  "author": "phuhh98@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@godaddy/terminus": "^4.12.1",
    "@graphql-tools/utils": "^10.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.7.1",
    "http-status-codes": "^2.2.0",
    "mongoose": "^7.4.1",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
